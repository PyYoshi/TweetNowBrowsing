{
  "name": "tweet-now-browsing",
  "version": "0.0.1",
  "description": "",
  "author": "PyYoshi <myoshi321go@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prettier-watch": "onchange 'src/**/*.js' 'utils/**/*.js' '*.js' -- prettier --write {{changed}}",
    "dev:webserver": "better-npm-run dev:webserver",
    "dev:build": "better-npm-run dev:build",
    "start": "run-p dev:webserver prettier-watch",
    "release": "better-npm-run release:build"
  },
  "betterScripts": {
    "dev:webserver": {
      "command": "node utils/webserver.js",
      "env": {
        "NODE_ENV": "development",
        "HOST": "localhost",
        "PORT": 3000
      }
    },
    "dev:build": {
      "command": "node utils/build.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "release:build": {
      "command": "node utils/build.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "devDependencies": {
    "archiver": "^2.1.0",
    "better-npm-run": "^0.1.0",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.2.0",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.6",
    "fs-extra": "^5.0.0",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "2.30.1",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "prettier": "1.9.2",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.1",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "3.10.0",
    "webpack-dev-server": "^2.3.0",
    "write-file-webpack-plugin": "4.2.0"
  },
  "dependencies": {
    "jquery": "^3.2.1",
    "lodash.isnumber": "^3.0.3",
    "lodash.isstring": "^4.0.1",
    "lodash.template": "^4.4.0",
    "lodash.throttle": "^4.1.1",
    "twitter-text": "^2.0.2-rc1"
  }
}
